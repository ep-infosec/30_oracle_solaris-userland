# unexpand the VENDOR_GEM_DIR string
<transform dir file link hardlink -> edit path $(VENDOR_GEM_DIR) $!(VENDOR_GEM_DIR)>

# drop unused files
<transform file path=.+gz$ -> drop>
<transform file path=.+/(lib|spec)/.*/(u|U)til/(w|W)indows.+ -> drop>

# facter contains file named 'sparc' which is being unexpanded to $(MACH)
# the following transformation expands it back to the original name
<transform file path=(.+)/cpuinfo/\$\(MACH\) -> set path %<1>/cpuinfo/sparc>

# fix expanded strings
<transform dir file link hardlink -> edit path "\$!\((.*)\)" "$(\1)">
