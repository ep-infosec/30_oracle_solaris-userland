<service_bundle type='manifest' name='sudo-logserver'>

<service
	name='network/security/sudo-logserver'
	type='service'
	version='1'>

	<create_default_instance enabled='false' />

	<single_instance/>

	<dependency
		name='dns'
		grouping='require_all'
		restart_on='error' 
		type='service'>
		<service_fmri value='svc:/network/dns/client' />
	</dependency>

	<dependency
		name='ca-certificates'
		grouping='require_all'
		restart_on='error' 
		type='service'>
		<service_fmri value='svc:/system/ca-certificates' />
	</dependency>

	<exec_method
		type='method'
		name='start'
		exec='/usr/sbin/sudo_logsrvd'
		timeout_seconds='60'>
		<method_context>
			<method_credential
				privileges='basic,{file_dac_read}:/system/volatile/sudo,{all}:/system/volatile/sudo/sudo_logsrvd.pid,{all}:/var/share/sudo/sudo-io/*,{file_dac_read}:/etc/certs/localhost/host.key,{file_dac_search}'
			/>
		</method_context>
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec=':kill'
		timeout_seconds='60' />

	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
		  High-performance log server that accepts event and I/O logs from sudo
			</loctext>
		</common_name>
		<documentation>
			<manpage title='sudo-logserver' section='8s'
			    manpath='/usr/share/man' />
		</documentation>
	</template>

</service>

</service_bundle>
