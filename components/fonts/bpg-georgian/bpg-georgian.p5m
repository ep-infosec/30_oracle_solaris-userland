set name=pkg.fmri \
    value=pkg:/system/font/truetype/$(COMPONENT_NAME)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="BPG Georgian fonts"
set name=pkg.description value="set of TrueType fonts for Georgian alphabet"
set name=pkg.human-version value=$(COMPONENT_VERSION)
set name=com.oracle.info.baid value=$(COMPONENT_BAID)
set name=com.oracle.info.description \
    value="set of TrueType fonts for Georgian alphabet"
set name=info.classification value=org.opensolaris.category.2008:System/Fonts
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=org.opensolaris.arc-caseid value=PSARC/2017/233
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
file path=usr/share/doc/ttf-$(COMPONENT_NAME)/BPG_GPL&GNU_Fonts.txt
file path=usr/share/fonts/TrueType/$(COMPONENT_NAME)/BPG_Algeti.ttf
file path=usr/share/fonts/TrueType/$(COMPONENT_NAME)/BPG_Chveulebrivi.ttf
file path=usr/share/fonts/TrueType/$(COMPONENT_NAME)/BPG_Courier.ttf
file path=usr/share/fonts/TrueType/$(COMPONENT_NAME)/BPG_Courier_S.ttf
file path=usr/share/fonts/TrueType/$(COMPONENT_NAME)/BPG_Elite.ttf
file path=usr/share/fonts/TrueType/$(COMPONENT_NAME)/BPG_Glaho.ttf
