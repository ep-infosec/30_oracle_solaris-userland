<include generate/common.transform>

# Drop everything not belonging to 'python'
<transform dir file link hardlink pkg.type=(?!python) -> drop>
<transform dir file link hardlink -> delete pkg.type .*>

# Use $(PYVER)
<transform dir file link hardlink -> edit path "/lib/python$(PYVER)/" "/lib/python$!(PYVER)/">
<transform dir file link hardlink -> edit path "\$!\((.*)\)" "$(\1)">

# this file was previously delivered in different package
<transform file path=.*/libsvn_swig_py-1.so.0.0.0 -> add pkg.linted.pkglint.dupaction001.1 true>
