<service_bundle type='manifest' name='mysql'>
<service
        name='application/database/mysql'
        type='service'
        version='1'>

	<!--
	   Wait for network interfaces to be initialized.
	-->
        <dependency
                name='network'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/milestone/network:default' />
        </dependency> 

	<!--
	   Wait for all local filesystems to be mounted.
	-->
        <dependency
                name='filesystem-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/filesystem/local:default' />
        </dependency> 

        <instance name='version_57' enabled='false'>
                <method_context working_directory='/usr/mysql/5.7'>
                        <method_credential user='mysql' group='mysql' />
                </method_context>

                <exec_method
                        type='method'
                        name='start'
                        exec='/lib/svc/method/mysql_57 start'
                        timeout_seconds='60' />

                <exec_method
                        type='method'
                        name='stop'
                        exec=':kill'
                        timeout_seconds='60' />

                <!--
                   refresh method for this service is not defined
                   because mysqld by itself cannot accept a HUP signal to
                   reload the configuration file my.cnf
                -->

                <property_group  name='mysql' type='application'>
                        <propval name='cnf' type='astring'
                                 value='/etc/mysql/5.7/my.cnf' />
                        <propval name='bin' type='astring'
                                 value='/usr/mysql/5.7/bin' />
                        <propval name='data' type='astring'
                                 value='/var/mysql/5.7/data' />
                        <propval name='value_authorization' type='astring'
                                 value='solaris.smf.value.mysql' /> 
                        <propval name='action_authorization' type='astring'
                                 value='solaris.smf.manage.mysql' />
                </property_group>

                <property_group name='general' type='framework'>
                        <propval name='action_authorization' type='astring'
                                 value='solaris.smf.manage.mysql' />
                        <propval name='value_authorization' type='astring'
                                 value='solaris.smf.value.mysql' />
                </property_group>

                <template>
                        <common_name>
                                <loctext xml:lang='C'>
                                        MySQL Database Management System
                                </loctext>
                        </common_name>

                        <documentation>
                                <manpage title='MySQL 5.7' section='1' />
                                <doc_link name='mysql.com'
                                        uri='http://dev.mysql.com/doc' />
                        </documentation>
                </template>
        </instance>

        <stability value='Evolving' />
</service>
</service_bundle>
