set name=pkg.fmri \
    value=pkg:/library/python/python-mysql-27@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="MySQL database connector for Python"
set name=pkg.description \
    value="The MySQLdb Python module provides a thread-compatible interface to the popular MySQL database server. One interface included, _mysql, mostly implements the MySQL C API, although wrapped in an object-oriented way. However, for applications intending to be portable across databases, the MySQLdb interface itself should be used as it provides a thin Python wrapper around the lower-level interface. The MySQLdb interface is compatible with the Python Database API Specification v2.0, as specified by PEP 249."
set name=pkg.linted.pkglint.dupaction001.1 value=true
set name=com.oracle.info.baid value=$(COMPONENT_BAID)
set name=com.oracle.info.description \
    value="the MySQL database adapter for Python"
set name=info.classification \
    value=org.opensolaris.category.2008:Development/Databases \
    value=org.opensolaris.category.2008:Development/Python
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=org.opensolaris.arc-caseid value=PSARC/2008/081
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)
#
file path=usr/lib/python2.7/vendor-packages/MySQLdb/64/_mysql.so
file path=usr/lib/python2.7/vendor-packages/MySQLdb/__init__.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/_exceptions.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/compat.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/connections.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/constants/CLIENT.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/constants/CR.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/constants/ER.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/constants/FIELD_TYPE.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/constants/FLAG.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/constants/__init__.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/converters.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/cursors.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/release.py
file path=usr/lib/python2.7/vendor-packages/MySQLdb/times.py
