COMPONENT_ARCHIVE=	$(COMPONENT_SRC).tar.gz
COMPONENT_ARCHIVE_HASH=	\
    sha256:7366f8dbcbdee3ac0295919f08dcd845d0ec2ee2d35ace875b4b731ff62fd0fb
