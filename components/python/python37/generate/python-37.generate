<include generate/common.transform>

# Delete everything not belonging to this package
<transform file link pkg.type=(?!main) -> drop>
<transform hardlink file link -> delete pkg.type .*>

# Add python version mediators to existing links
<transform link path=usr/bin/2to3 -> set mediator python>
<transform link path=usr/bin/2to3 -> set mediator-version 3.7>
<transform link path=usr/bin/idle3 -> set mediator python3>
<transform link path=usr/bin/idle3 -> set mediator-version 3.7>
<transform link path=usr/bin/pydoc3 -> set mediator python3>
<transform link path=usr/bin/pydoc3 -> set mediator-version 3.7>
<transform link path=usr/bin/python3$ -> set mediator python3>
<transform link path=usr/bin/python3$ -> set mediator-version 3.7>
<transform link path=usr/bin/python3-config -> set mediator python3>
<transform link path=usr/bin/python3-config -> set mediator-version 3.7>
<transform link path=usr/bin/pyvenv -> set mediator python3>
<transform link path=usr/bin/pyvenv -> set mediator-version 3.7>
<transform link path=usr/lib/\$\(MACH64\)/pkgconfig/python3.pc -> set mediator python3>
<transform link path=usr/lib/\$\(MACH64\)/pkgconfig/python3.pc -> set mediator-version 3.7>

<transform link path=usr/share/man/man1/python3.1 -> set mediator python>
<transform link path=usr/share/man/man1/python3.1 -> set mediator-version 3.7>

# Emit new non version-tied links
<transform link path=usr/bin/pydoc3 \
	-> emit link path=usr/bin/pydoc target=pydoc3.7 mediator=python mediator-version=3.7>
<transform link path=usr/bin/idle3 \
	-> emit link path=usr/bin/idle target=idle3.7 mediator=python mediator-version=3.7>
<transform link path=usr/bin/python3 \
	-> emit link path=usr/bin/python target=python3.7 mediator=python mediator-version=3.7>
<transform link path=usr/bin/python3-config \
	-> emit link path=usr/bin/python-config target=python3.7-config mediator=python mediator-version=3.7>

# Add pkg.tmp.autopyc variables (don't ship their corresponding .pyc files)
<transform file path=usr/lib/python3.7/config-3.7m/python-config.py -> set pkg.tmp.autopyc false>
<transform file path=usr/lib/python3.7/lib2to3/tests/data/.*.py -> set pkg.tmp.autopyc false>
<transform file path=usr/lib/python3.7/test/bad_coding.*.py -> set pkg.tmp.autopyc false>
<transform file path=usr/lib/python3.7/test/badsyntax_.* -> set pkg.tmp.autopyc false>

# Emit some additional links
<transform file path=(.*)/libpython3.7m_db.so.1.0 \
	-> emit link path=%<1>/libpython3.7m_db.so target=libpython3.7m_db.so.1.0>

# Add links into non 64bit directory
<transform file path=usr/lib/(.*)/python-3.7.pc \
	-> emit link path=usr/lib/pkgconfig/python-3.7.pc target=../%<1>/python-3.7.pc>
<transform link path=usr/lib/pkgconfig/python-3.7.pc \
	-> emit link path=usr/lib/pkgconfig/python3.pc target=python-3.7.pc mediator=python3 mediator-version=3.7>

# Add pkg.linted.userland.action variables
<transform file path=usr/lib/python3.7/config-3.7m/python.o -> set pkg.linted.userland.action001.2 true>

# Add mediated libpython3.so
<transform file path=.*/libpython3.so$ -> set action.hash %(path)>
<transform file path=.*/libpython3.so$ -> edit path libpython3.so libpython3-37.so>
<transform file path=.*/libpython3-37.so$ \
	-> emit link path=usr/lib/$(MACH64)/libpython3.so target=libpython3-37.so mediator=python3 mediator-version=3.7>

# move and rename ln lib
<transform file path=.*/llib-lpython37m.ln -> set action.hash \$\(MACH64\)/llib-lpython37m.ln>
<transform file path=(.*)/llib-lpython37m.ln -> set path %<1>/llib-lpython3.7m.ln>

# remove incorrect conditional dependency on tkinter
<transform file path=.*/idlelib/pyshell.py -> set pkg.depend.bypass-generate .*>
<transform file path=.*/turtledemo/__main__.py -> set pkg.depend.bypass-generate .*>

<transform file path=.*/(different_encoding|false_encoding|pytree_idempotency).py \
	-> set pkg.depend.bypass-generate .*>

# remove dtrace related tests as they won't work on Solaris (see 30640154)
<transform file path=.*/test/test_dtrace.py$ -> drop>
<transform file path=.*/test/dtracedata/.* -> drop>
